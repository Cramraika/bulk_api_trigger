# ===========================
# üîë Core / Deployment
# ===========================
DEPLOYMENT_MODE=true
KEEP_ALIVE=true
JOB_NAME=webhook-runner
LOG_LEVEL=INFO
MAX_LOG_SIZE_MB=100
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ===========================
# üëÄ Watchdog
# ===========================
WATCHDOG_ENABLED=true
WATCH_PATHS=/app/data/csv
AUTO_PROCESS=true
DEBOUNCE_DELAY=3.0
MAX_QUEUE_SIZE=100

# ===========================
# üìë CSV Handling
# ===========================
CSV_REQUIRED_COLUMNS=webhook_url
CSV_OPTIONAL_COLUMNS=method,payload,header,name,group
CSV_CHUNK_SIZE=1000
CSV_FILE_PATTERNS=/app/data/csv/*.csv
ARCHIVE_PROCESSED=true
ARCHIVE_PATH=/app/data/csv/processed
SKIP_ROWS=0
CSV_FILE=AUTO

# ===========================
# ‚ö° Rate Limiting & Workers
# ===========================
MAX_WORKERS=3
BASE_RATE_LIMIT=3.0
STARTING_RATE_LIMIT=3.0
MAX_RATE_LIMIT=10.0
WINDOW_SIZE=20
ERROR_THRESHOLD=0.3

# ===========================
# üîÅ Retry & Timeout
# ===========================
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30

# ===========================
# üíæ Database
# ===========================
DATABASE_ENABLED=true
DATABASE_PATH=/app/data/webhook_results.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# ===========================
# ‚úâÔ∏è Notifications ‚Äì Email
# ===========================
EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_RECIPIENTS=admin@example.com
EMAIL_NOTIFY_COMPLETION=true
EMAIL_NOTIFY_ERRORS=true
EMAIL_NOTIFY_FILE_DETECTED=false

# ===========================
# üí¨ Notifications ‚Äì Slack
# ===========================
SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_NOTIFY_COMPLETION=true
SLACK_NOTIFY_ERRORS=true
SLACK_NOTIFY_FILE_DETECTED=true
