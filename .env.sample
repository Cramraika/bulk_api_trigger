# Deployment
DEPLOYMENT_MODE=true
KEEP_ALIVE=true
JOB_NAME=
HEALTH_PORT=8000
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Watchdog
WATCHDOG_ENABLED=true
WATCH_PATHS=/app/data/csv
AUTO_PROCESS=true
DEBOUNCE_DELAY=3.0
PROCESSING_WORKERS=1
MAX_QUEUE_SIZE=100

# CSV
CSV_FILE=AUTO
CSV_FILE_PATTERNS=/app/data/csv/*.csv,/app/data/*.csv
CSV_REQUIRED_COLUMNS=webhook_url
CSV_OPTIONAL_COLUMNS=method,payload,header,name,group
CSV_CHUNK_SIZE=1000
SKIP_ROWS=0

# Rate limiting (DELAYS in seconds)
MAX_WORKERS=3
BASE_RATE_LIMIT=3.0
STARTING_RATE_LIMIT=3.0
MAX_RATE_LIMIT=10.0
WINDOW_SIZE=20
ERROR_THRESHOLD=0.3
GLOBAL_MAX_REQUESTS=0

# Retries & timeouts
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30

# Database
DATABASE_ENABLED=true
DATABASE_PATH=/app/data/webhook_results.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# File management
ARCHIVE_PROCESSED=true
ARCHIVE_ON_VALIDATION_FAILURE=true
ARCHIVE_PATH=/app/data/csv/processed
DUPLICATES_PATH=/app/data/csv/duplicates
REJECTED_PATH=/app/data/csv/rejected

# Logging & reports
LOG_LEVEL=INFO
MAX_LOG_SIZE_MB=100
REPORT_PATH=/app/data/reports
REPORT_KEEP=200
FORCE_TQDM=0
PROGRESS_EVERY_N=50

# Slack
SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
SLACK_NOTIFY_COMPLETION=true
SLACK_NOTIFY_FILE_DETECTED=true
SLACK_NOTIFY_PROGRESS=false
SLACK_PROGRESS_EVERY_N=25
SLACK_PROGRESS_FIRST_AT_N=10
SLACK_PROGRESS_MIN_PCT=5
SLACK_PROGRESS_URGENCY=auto

# Email
EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_RECIPIENTS=
EMAIL_NOTIFY_COMPLETION=true
EMAIL_NOTIFY_FILE_DETECTED=false

# Testing
SEND_TEST_NOTIFICATIONS_ON_STARTUP=false