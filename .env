# ===========================
# üåê General App Config
# ===========================
APP_ENV=dev                 # dev | prod | test
CONFIG_PATH=/app/config.yaml
DATA_DIR=/app/data
LOG_LEVEL=INFO              # DEBUG | INFO | WARNING | ERROR
LOG_MAX_MB=5
LOG_BACKUP_COUNT=5

# ===========================
# üìä CSV Watchdog
# ===========================
WATCH_DIR=/app/data/csv
DEBOUNCE_DELAY=3.0          # seconds
ARCHIVE_DIR=/app/data/archive
PROCESSED_DIR=/app/data/processed
LOGS_DIR=/app/data/logs

# ===========================
# ‚ö° Workers & Rate Limit
# ===========================
MAX_WORKERS=3
BASE_RATE_LIMIT=3.0         # base per-request delay in seconds
MAX_RETRIES=3
RETRY_BACKOFF=2.0           # exponential backoff factor
REQUEST_TIMEOUT=15          # API timeout (seconds)
RETRY_STRATEGY=exponential  # exponential | linear | fixed

# ===========================
# üì¶ Database / Persistence
# ===========================
DB_PATH=/app/data/jobs.sqlite
DB_MIGRATE_ON_START=true
DB_PRUNE_HISTORY_DAYS=30

# ===========================
# üè• Healthcheck Server
# ===========================
HEALTHCHECK_ENABLED=true
HEALTHCHECK_PORT=8000
HEALTHCHECK_HOST=0.0.0.0

# ===========================
# üîî Notifications
# ===========================
# Slack
SLACK_WEBHOOK_URL=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFY_EMAIL_TO=
NOTIFY_EMAIL_FROM=

# Discord
DISCORD_WEBHOOK_URL=

# ===========================
# üìä Metrics & Reporting
# ===========================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9000

# Job result stats (optional for dashboard)
SAVE_AVERAGE_RESPONSE_TIME=true
SAVE_LATENCY_METRICS=true

# ===========================
# üõ†Ô∏è Debug / Misc
# ===========================
DEBUG_MODE=false
TRACE_HTTP=false            # log full request/response payloads
DISABLE_SSL_VERIFY=false    # allow self-signed certs
